# AA Virtual Service Manager Configuration
# Environment-specific settings

# Default environment (development, staging, production)
DEFAULT_ENV=development

# Development Environment
DEV_BACKEND_PORT=8000
DEV_FRONTEND_PORT=3000
DEV_BACKEND_HOST=0.0.0.0
DEV_BACKEND_LOG_LEVEL=debug
DEV_FRONTEND_LOG_LEVEL=verbose
DEV_DATABASE_URL=sqlite:///./dev.db
DEV_ENABLE_HOT_RELOAD=true

# Staging Environment
STAGING_BACKEND_PORT=8001
STAGING_FRONTEND_PORT=3001
STAGING_BACKEND_HOST=0.0.0.0
STAGING_BACKEND_LOG_LEVEL=info
STAGING_FRONTEND_LOG_LEVEL=normal
STAGING_DATABASE_URL=postgresql://user:pass@localhost:5432/aa_virtual_staging
STAGING_ENABLE_HOT_RELOAD=false

# Production Environment
PROD_BACKEND_PORT=80
PROD_FRONTEND_PORT=443
PROD_BACKEND_HOST=0.0.0.0
PROD_BACKEND_LOG_LEVEL=warning
PROD_FRONTEND_LOG_LEVEL=error
PROD_DATABASE_URL=postgresql://user:pass@localhost:5432/aa_virtual_prod
PROD_ENABLE_HOT_RELOAD=false

# Logging Configuration
LOG_FORMAT=json
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5
LOG_LEVEL_OVERRIDE=

# Service Configuration
SERVICE_STARTUP_TIMEOUT=30
SERVICE_HEALTH_CHECK_INTERVAL=5
SERVICE_MAX_RESTART_ATTEMPTS=3

# Docker Configuration (if using Docker)
USE_DOCKER=false
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_COMPOSE_PROD_FILE=docker-compose.prod.yml
