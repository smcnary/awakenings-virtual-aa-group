{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "npm run setup",
  "devCommand": "cd frontend && npm run dev",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.py": {
      "runtime": "python3.9",
      "maxDuration": 10
    }
  },
  "redirects": [
    {
      "source": "/healthz",
      "destination": "/api/healthz",
      "permanent": false
    },
    {
      "source": "/api/(.*)",
      "destination": "https://api.aa-virtual.com/$1",
      "permanent": false
    }
  ],
  "crons": [
    {
      "path": "/api/ops/materialize-recurrences",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/ops/purge-ephemeral",
      "schedule": "0 4 * * *"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "AA Virtual",
    "NEXT_PUBLIC_APP_VERSION": "1.0.0"
  }
}
